[flake8]
max-line-length = 100
extend-ignore =
    E203,
    W503,
    F401,
    F841,
    F541
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .eggs,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    build,
    dist
per-file-ignores =
    __init__.py:F401,F403
    **/config.py:F401
    **/scripts/*.py:E402
